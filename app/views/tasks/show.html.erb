<div class = "container">
  <h1><%= @task.title %></h1>
  <h2><%= @task.details %></h2>
  <%if @task.completed %>
  <%= "Completed" %>
  <% else %>
  <%= "Not completed yet..." %>
  <% end %>
  <p><%= link_to "back","/tasks" %></p>
  <p><%= link_to "edit","/tasks/#{@task.id}/edit" %></p>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
